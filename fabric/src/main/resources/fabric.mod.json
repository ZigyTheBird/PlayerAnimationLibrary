{
  "schemaVersion": 1,
  "id": "player_animation_library",
  "version": "${version}",
  "name": "Player Animation Library",
  "description": "A library that allows mods and data packs to animate the player, in a way that doesn't conflict with other mods. (and much more!)",
  "authors": [
    "Zigy",
    "dima_dencep"
  ],
  "contact": {
    "homepage": "https://pal-docs.zigythebird.com",
    "sources": "https://github.com/ZigyTheBird/PlayerAnimationLibrary",
    "issues": "https://github.com/ZigyTheBird/PlayerAnimationLibrary/issues"
  },
  "license": "MIT License",
  "icon": "assets/player_animation_library/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.zigythebird.playeranim.fabric.ModInitFabric"
    ],
    "client": [
      "com.zigythebird.playeranim.fabric.client.ModInitFabricClient"
    ]
  },
  "mixins": [
    "player_animation_library.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.16.10",
    "minecraft": "~1.21.4",
    "java": ">=21",
    "fabric-api": "*"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ]
    }
  }
}
